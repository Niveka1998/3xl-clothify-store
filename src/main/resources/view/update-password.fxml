<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="158.0" prefWidth="320.0" style="-fx-background-color: black;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.UpdatePasswordController">
    <children>
        <Label layoutX="30" layoutY="30" text="Enter Email:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
        <TextField fx:id="txtEmail" layoutX="150" layoutY="30" />

        <Label layoutX="30" layoutY="70" text="New Password:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
        <PasswordField fx:id="txtNewPassword" layoutX="150" layoutY="70" />

        <Button layoutX="103.0" layoutY="118.0" onAction="#onUpdatePassword" style="-fx-background-color: #88aad2;" text="Update Password">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
    </children>
</AnchorPane>
